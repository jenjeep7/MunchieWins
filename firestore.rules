rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Wins subcollection - users can only access their own wins
      match /wins/{winId} {
        allow read, write: if isOwner(userId);
      }
      
      // Weight entries subcollection - users can only access their own weight data
      match /weight/{entryId} {
        allow read, write: if isOwner(userId);
      }
      
      // Challenges subcollection - users can only access their own challenges
      match /challenges/{challengeId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
